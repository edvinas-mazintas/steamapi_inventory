<%- include('./partials/header.ejs') %>
<%- include('./partials/navigation-profile.ejs') %>

<div class="container">
    <div class="columns">
        <div class="column">
            <div class="card">
                <div class="card-content">

                    <div class="field" style="text-align: center">
                        <a href data-target="modal-ter" aria-haspopup="true">
                            <img style="border-radius: 100%; height: 92px; padding: 5pt;"
                                src="<%= profilePicture %> " />
                        </a>

                        <h1 class="title is-4"><%= personaname %></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="columns is-variable is-3 ">
        <div class="column is-one-quarter">
            <div class="card">


                <a href="#" class="navbar-item is-size-5">
                    General
                </a>

                <a href="#" class="navbar-item is-size-5">
                    Settings
                </a>

                <a href="#" class="navbar-item is-size-5">
                    Privacy
                </a>

                <% if(userType == 'admin') { %>
                    <a href="/admin" class="navbar-item is-size-5">
                        Admin
                    </a>
                <% } %>
            </div>
        </div>


        <div class="column is-three-quarter">
            <div class="card">
                <div class="card-content">

                    <div class="column">
                        <div class="column">

                            <% if(messages.emailFailure) { %>
                            <div class="field">
                                <div class="has-background-danger-light has-text-danger p-2">
                                    <i class="fas fa-exclamation-triangle mr-2"></i><%= messages.emailFailure %>
                                </div>
                            </div>
                            <% } %>

                            <form class="control" action="/profile/email?_method=PUT" method="POST">
                                <div class="field">
                                    <label class="label">Email</label>
                                    <p class="control has-icons-left">
                                        <input class="input" type="email" placeholder="Email" name="email"
                                            value="<%= email %> ">
                                        <span class="icon is-small is-left">
                                            <i class="fas fa-envelope"></i>
                                        </span>
                                    </p>
                                </div>

                                <div class="control">
                                    <input class="button is-link" type="submit" value="Save"></input>
                                </div>
                            </form>

                            <form class="control" action="/profile?_method=DELETE" method="POST">
                                <div class="control">
                                    <input class="button is-danger is-pulled-right" type="submit"
                                        value="Delete Account">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>